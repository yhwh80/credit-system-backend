<!DOCTYPE html>
<html>
<head>
  <title>Login - Recommend Us UK</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            dark: {
              800: '#1e293b',
              900: '#0f172a',
              950: '#020617',
            }
          }
        }
      }
    }
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-dark-950 flex items-center justify-center min-h-screen">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-900/20 via-purple-900/20 to-pink-900/20"></div>
  
  <div class="relative z-10 w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
          <i class="fas fa-star text-white text-xl"></i>
        </div>
        <span class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
          Recommend Us UK
        </span>
      </div>
      <p class="text-gray-400">Welcome back to your professional network</p>
    </div>

    <form action="/auth/login" method="POST" class="bg-dark-900 p-8 rounded-2xl shadow-2xl border border-gray-800 space-y-6">
      <h2 class="text-2xl font-bold text-white text-center mb-6">Sign In</h2>

      <!-- Success/Error Messages -->
      <div id="loginMessages" class="hidden">
        <div class="bg-green-600 text-white p-3 rounded-lg text-sm text-center">
          Registration successful! Please sign in with your new account.
        </div>
      </div>

      <!-- Quick Test Login Section (Testing Phase Only) -->
      <div class="bg-yellow-900/20 border border-yellow-700/50 rounded-lg p-4 mb-6">
        <h3 class="text-yellow-400 text-sm font-semibold mb-3 text-center">
          <i class="fas fa-flask mr-2"></i>Testing Phase - Quick Login
        </h3>
        <div class="grid grid-cols-2 gap-2 text-xs">
          <button type="button" onclick="quickLogin('client@test.com', 'password123')" 
                  class="bg-blue-600/20 hover:bg-blue-600/30 text-blue-300 border border-blue-600/50 rounded px-3 py-2 transition-colors">
            <i class="fas fa-briefcase mr-1"></i>Test Client
          </button>
          <button type="button" onclick="quickLogin('pro@test.com', 'password123')" 
                  class="bg-purple-600/20 hover:bg-purple-600/30 text-purple-300 border border-purple-600/50 rounded px-3 py-2 transition-colors">
            <i class="fas fa-tools mr-1"></i>Test Pro
          </button>
          <button type="button" onclick="quickLogin('sarah@test.com', 'password123')" 
                  class="bg-pink-600/20 hover:bg-pink-600/30 text-pink-300 border border-pink-600/50 rounded px-3 py-2 transition-colors">
            <i class="fas fa-user mr-1"></i>Sarah (Client)
          </button>
          <button type="button" onclick="quickLogin('mike@test.com', 'password123')" 
                  class="bg-green-600/20 hover:bg-green-600/30 text-green-300 border border-green-600/50 rounded px-3 py-2 transition-colors">
            <i class="fas fa-hammer mr-1"></i>Mike (Pro)
          </button>
        </div>
        <p class="text-gray-500 text-xs text-center mt-2">
          Click any button above to instantly login with test credentials
        </p>
      </div>

      <div class="space-y-4">
        <div>
          <label class="block text-gray-300 text-sm font-medium mb-2">Email Address</label>
          <input type="email" name="email" placeholder="Enter your email" required 
                 class="w-full px-4 py-3 bg-dark-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
        </div>
        
        <div>
          <label class="block text-gray-300 text-sm font-medium mb-2">Password</label>
          <input type="password" name="password" placeholder="Enter your password" required 
                 class="w-full px-4 py-3 bg-dark-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
        </div>
      </div>

      <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
        <i class="fas fa-sign-in-alt mr-2"></i>
        Sign In
      </button>
      
      <div class="text-center">
        <p class="text-gray-400">Don't have an account? 
          <a href="/auth/register" class="text-blue-400 hover:text-blue-300 font-medium transition-colors">Create Account</a>
        </p>
      </div>
      
      <div class="text-center">
        <a href="/" class="text-gray-500 hover:text-gray-400 text-sm transition-colors">
          <i class="fas fa-arrow-left mr-1"></i>
          Back to Homepage
        </a>
      </div>
    </form>
  </div>

  <script>
    // Show success message if redirected from registration
    if (window.location.search.includes('success=registered')) {
      document.getElementById('loginMessages').classList.remove('hidden');
    }

    function quickLogin(email, password) {
      document.querySelector('input[name="email"]').value = email;
      document.querySelector('input[name="password"]').value = password;
      
      // Add visual feedback
      const buttons = document.querySelectorAll('button[onclick^="quickLogin"]');
      buttons.forEach(btn => btn.classList.add('opacity-50'));
      
      // Submit form after brief delay for visual feedback
      setTimeout(() => {
        document.querySelector('form').submit();
      }, 200);
    }
  </script>
</body>
</html>
